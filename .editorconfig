# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{php,html,htm}]
indent_style = space
indent_size = 4

[*.{js,css,scss,json,vue}]
indent_style = space
indent_size = 2
